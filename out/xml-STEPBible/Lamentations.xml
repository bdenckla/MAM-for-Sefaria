<book24 versification-tradition="BHS">
  <chapter osisID="Lam.1">
    <verse osisID="Lam.1.1">
      <text text="אֵיכָ֣ה" />
      <lp-legarmeih />
      <text text=" יָשְׁבָ֣ה בָדָ֗ד הָעִיר֙ רַבָּ֣תִי עָ֔ם הָיְתָ֖ה כְּאַלְמָנָ֑ה רַבָּ֣תִי בַגּוֹיִ֗ם שָׂרָ֙תִי֙ בַּמְּדִינ֔וֹת הָיְתָ֖ה לָמַֽס׃" />
      <spi-samekh2-before />
    </verse>
    <spi-samekh2 />
    <verse osisID="Lam.1.2">
      <spi-samekh2-after />
      <text text="בָּכ֨וֹ תִבְכֶּ֜ה בַּלַּ֗יְלָה וְדִמְעָתָהּ֙ עַ֣ל לֶֽחֱיָ֔הּ אֵֽין־לָ֥הּ מְנַחֵ֖ם מִכׇּל־אֹהֲבֶ֑יהָ כׇּל־רֵעֶ֙יהָ֙ בָּ֣גְדוּ בָ֔הּ הָ֥יוּ לָ֖הּ לְאֹיְבִֽים׃" />
      <spi-samekh2-before />
    </verse>
    <spi-samekh2 />
    <verse osisID="Lam.1.3">
      <spi-samekh2-after />
      <text text="גָּֽלְתָ֨ה יְהוּדָ֤ה מֵעֹ֙נִי֙ וּמֵרֹ֣ב עֲבֹדָ֔ה הִ֚יא יָשְׁבָ֣ה בַגּוֹיִ֔ם לֹ֥א מָצְאָ֖ה מָנ֑וֹחַ כׇּל־רֹדְפֶ֥יהָ הִשִּׂיג֖וּהָ בֵּ֥ין הַמְּצָרִֽים׃" />
      <spi-samekh2-before />
    </verse>
    <spi-samekh2 />
    <verse osisID="Lam.1.4">
      <spi-samekh2-after />
      <text text="דַּרְכֵ֨י צִיּ֜וֹן אֲבֵל֗וֹת מִבְּלִי֙ בָּאֵ֣י מוֹעֵ֔ד כׇּל־שְׁעָרֶ֙יהָ֙ שֽׁוֹמֵמִ֔ין כֹּהֲנֶ֖יהָ נֶאֱנָחִ֑ים בְּתוּלֹתֶ֥יהָ נּוּג֖וֹת וְהִ֥יא מַר־לָֽהּ׃" />
      <spi-samekh2-before />
    </verse>
    <spi-samekh2 />
    <verse osisID="Lam.1.5">
      <spi-samekh2-after />
      <text text="הָי֨וּ צָרֶ֤יהָ לְרֹאשׁ֙ אֹיְבֶ֣יהָ שָׁל֔וּ כִּֽי־יְהֹוָ֥ה הוֹגָ֖הּ עַ֣ל רֹב־פְּשָׁעֶ֑יהָ עוֹלָלֶ֛יהָ הָלְכ֥וּ שְׁבִ֖י לִפְנֵי־צָֽר׃" />
      <spi-samekh2-before />
    </verse>
    <spi-samekh2 />
    <verse osisID="Lam.1.6">
      <spi-samekh2-after />
      <text text="וַיֵּצֵ֥א " />
      <kq>
        <kq-k>
          <text text="(מן בת)" />
        </kq-k>
        <text text=" " />
        <kq-q>
          <text text="[מִבַּת־]" />
        </kq-q>
      </kq>
      <text text="צִיּ֖וֹן כׇּל־הֲדָרָ֑הּ הָי֣וּ שָׂרֶ֗יהָ כְּאַיָּלִים֙ לֹא־מָצְא֣וּ מִרְעֶ֔ה וַיֵּלְכ֥וּ בְלֹא־כֹ֖חַ לִפְנֵ֥י רוֹדֵֽף׃" />
      <spi-samekh2-before />
    </verse>
    <spi-samekh2 />
    <verse osisID="Lam.1.7">
      <spi-samekh2-after />
      <text text="זָֽכְרָ֣ה יְרוּשָׁלַ֗͏ִם יְמֵ֤י עׇנְיָהּ֙ וּמְרוּדֶ֔יהָ כֹּ֚ל מַחֲמֻדֶ֔יהָ אֲשֶׁ֥ר הָי֖וּ מִ֣ימֵי קֶ֑דֶם בִּנְפֹ֧ל עַמָּ֣הּ בְּיַד־צָ֗ר וְאֵ֤ין עוֹזֵר֙ לָ֔הּ רָא֣וּהָ צָרִ֔ים שָׂחֲק֖וּ עַ֥ל מִשְׁבַּתֶּֽהָ׃" />
      <spi-samekh2-before />
    </verse>
    <spi-samekh2 />
    <verse osisID="Lam.1.8">
      <spi-samekh2-after />
      <text text="חֵ֤טְא חָֽטְאָה֙ יְר֣וּשָׁלַ֔͏ִם עַל־כֵּ֖ן לְנִידָ֣ה הָיָ֑תָה כׇּֽל־מְכַבְּדֶ֤יהָ הִזִּיל֙וּהָ֙ כִּי־רָא֣וּ עֶרְוָתָ֔הּ גַּם־הִ֥יא נֶאֶנְחָ֖ה וַתָּ֥שׇׁב אָחֽוֹר׃" />
      <spi-samekh2-before />
    </verse>
    <spi-samekh2 />
    <verse osisID="Lam.1.9">
      <spi-samekh2-after />
      <text text="טֻמְאָתָ֣הּ בְּשׁוּלֶ֗יהָ לֹ֤א זָֽכְרָה֙ אַחֲרִיתָ֔הּ וַתֵּ֣רֶד פְּלָאִ֔ים אֵ֥ין מְנַחֵ֖ם לָ֑הּ רְאֵ֤ה יְהֹוָה֙ אֶת־עׇנְיִ֔י כִּ֥י הִגְדִּ֖יל אוֹיֵֽב׃" />
      <spi-samekh2-before />
    </verse>
    <spi-samekh2 />
    <verse osisID="Lam.1.10">
      <spi-samekh2-after />
      <text text="יָדוֹ֙ פָּ֣רַשׂ צָ֔ר עַ֖ל כׇּל־מַחֲמַדֶּ֑יהָ כִּֽי־רָאֲתָ֤ה גוֹיִם֙ בָּ֣אוּ מִקְדָּשָׁ֔הּ אֲשֶׁ֣ר צִוִּ֔יתָה לֹא־יָבֹ֥אוּ בַקָּהָ֖ל לָֽךְ׃" />
      <spi-samekh2-before />
    </verse>
    <spi-samekh2 />
    <verse osisID="Lam.1.11">
      <spi-samekh2-after />
      <text text="כׇּל־עַמָּ֤הּ נֶאֱנָחִים֙ מְבַקְשִׁ֣ים לֶ֔חֶם נָתְנ֧וּ " />
      <kq>
        <kq-k>
          <text text="(מחמודיהם)" />
        </kq-k>
        <text text=" " />
        <kq-q>
          <text text="[מַחֲמַדֵּיהֶ֛ם]" />
        </kq-q>
      </kq>
      <text text=" בְּאֹ֖כֶל לְהָשִׁ֣יב נָ֑פֶשׁ רְאֵ֤ה יְהֹוָה֙ וְֽהַבִּ֔יטָה כִּ֥י הָיִ֖יתִי זוֹלֵלָֽה׃" />
      <spi-samekh2-before />
    </verse>
    <spi-samekh2 />
    <verse osisID="Lam.1.12">
      <spi-samekh2-after />
      <letter-small>
        <text text="ל֣" />
      </letter-small>
      <text text="וֹא אֲלֵיכֶם֮ כׇּל־עֹ֣בְרֵי דֶ֒רֶךְ֒ הַבִּ֣יטוּ וּרְא֔וּ אִם־יֵ֤שׁ מַכְאוֹב֙ כְּמַכְאֹבִ֔י אֲשֶׁ֥ר עוֹלַ֖ל לִ֑י אֲשֶׁר֙ הוֹגָ֣ה יְהֹוָ֔ה בְּי֖וֹם חֲר֥וֹן אַפּֽוֹ׃" />
      <spi-samekh2-before />
    </verse>
    <spi-samekh2 />
    <verse osisID="Lam.1.13">
      <spi-samekh2-after />
      <text text="מִמָּר֛וֹם שָֽׁלַח־אֵ֥שׁ בְּעַצְמֹתַ֖י וַיִּרְדֶּ֑נָּה פָּרַ֨שׂ רֶ֤שֶׁת לְרַגְלַי֙ הֱשִׁיבַ֣נִי אָח֔וֹר נְתָנַ֙נִי֙ שֹֽׁמֵמָ֔ה כׇּל־הַיּ֖וֹם דָּוָֽה׃" />
      <spi-samekh2-before />
    </verse>
    <spi-samekh2 />
    <verse osisID="Lam.1.14">
      <spi-samekh2-after />
      <text text="נִשְׂקַד֩ עֹ֨ל פְּשָׁעַ֜י בְּיָד֗וֹ יִשְׂתָּ֥רְג֛וּ עָל֥וּ עַל־צַוָּארִ֖י הִכְשִׁ֣יל כֹּחִ֑י נְתָנַ֣נִי אֲדֹנָ֔י בִּידֵ֖י לֹא־אוּכַ֥ל קֽוּם׃" />
      <spi-samekh2-before />
    </verse>
    <spi-samekh2 />
    <verse osisID="Lam.1.15">
      <spi-samekh2-after />
      <text text="סִלָּ֨ה כׇל־אַבִּירַ֤י" />
      <lp-paseq />
      <text text="אֲדֹנָי֙ בְּקִרְבִּ֔י קָרָ֥א עָלַ֛י מוֹעֵ֖ד לִשְׁבֹּ֣ר בַּחוּרָ֑י גַּ֚ת דָּרַ֣ךְ אֲדֹנָ֔י לִבְתוּלַ֖ת בַּת־יְהוּדָֽה׃" />
      <spi-samekh2-before />
    </verse>
    <spi-samekh2 />
    <verse osisID="Lam.1.16">
      <spi-samekh2-after />
      <text text="עַל־אֵ֣לֶּה" />
      <lp-legarmeih />
      <text text=" אֲנִ֣י בוֹכִיָּ֗ה עֵינִ֤י" />
      <lp-paseq />
      <text text="עֵינִי֙ יֹ֣רְדָה מַּ֔יִם כִּֽי־רָחַ֥ק מִמֶּ֛נִּי מְנַחֵ֖ם מֵשִׁ֣יב נַפְשִׁ֑י הָי֤וּ בָנַי֙ שֽׁוֹמֵמִ֔ים כִּ֥י גָבַ֖ר אוֹיֵֽב׃" />
      <spi-samekh2-before />
    </verse>
    <spi-samekh2 />
    <verse osisID="Lam.1.17">
      <spi-samekh2-after />
      <text text="פֵּֽרְשָׂ֨ה צִיּ֜וֹן בְּיָדֶ֗יהָ אֵ֤ין מְנַחֵם֙ לָ֔הּ צִוָּ֧ה יְהֹוָ֛ה לְיַעֲקֹ֖ב סְבִיבָ֣יו צָרָ֑יו הָיְתָ֧ה יְרוּשָׁלַ֛͏ִם לְנִדָּ֖ה בֵּינֵיהֶֽם׃" />
      <spi-samekh2-before />
    </verse>
    <spi-samekh2 />
    <verse osisID="Lam.1.18">
      <spi-samekh2-after />
      <text text="צַדִּ֥יק ה֛וּא יְהֹוָ֖ה כִּ֣י פִ֣יהוּ מָרִ֑יתִי שִׁמְעוּ־נָ֣א כׇל־" />
      <kq>
        <kq-q>
          <text text="[הָֽעַמִּ֗ים]" />
        </kq-q>
        <text text=" " />
        <kq-k>
          <text text="(עמים)" />
        </kq-k>
      </kq>
      <text text=" וּרְאוּ֙ מַכְאֹבִ֔י בְּתוּלֹתַ֥י וּבַחוּרַ֖י הָלְכ֥וּ בַשֶּֽׁבִי׃" />
      <spi-samekh2-before />
    </verse>
    <spi-samekh2 />
    <verse osisID="Lam.1.19">
      <spi-samekh2-after />
      <text text="קָרָ֤אתִי לַֽמְאַהֲבַי֙ הֵ֣מָּה רִמּ֔וּנִי כֹּהֲנַ֥י וּזְקֵנַ֖י בָּעִ֣יר גָּוָ֑עוּ כִּֽי־בִקְשׁ֥וּ אֹ֙כֶל֙ לָ֔מוֹ וְיָשִׁ֖יבוּ אֶת־נַפְשָֽׁם׃" />
      <spi-samekh2-before />
    </verse>
    <spi-samekh2 />
    <verse osisID="Lam.1.20">
      <spi-samekh2-after />
      <text text="רְאֵ֨ה יְהֹוָ֤ה כִּֽי־צַר־לִי֙ מֵעַ֣י חֳמַרְמָ֔רוּ נֶהְפַּ֤ךְ לִבִּי֙ בְּקִרְבִּ֔י כִּ֥י מָר֖וֹ מָרִ֑יתִי מִח֥וּץ שִׁכְּלָה־חֶ֖רֶב בַּבַּ֥יִת כַּמָּֽוֶת׃" />
      <spi-samekh2-before />
    </verse>
    <spi-samekh2 />
    <verse osisID="Lam.1.21">
      <spi-samekh2-after />
      <text text="שָׁמְע֞וּ כִּ֧י נֶאֱנָחָ֣ה אָ֗נִי אֵ֤ין מְנַחֵם֙ לִ֔י כׇּל־אֹ֨יְבַ֜י שָׁמְע֤וּ רָֽעָתִי֙ שָׂ֔שׂוּ כִּ֥י אַתָּ֖ה עָשִׂ֑יתָ הֵבֵ֥אתָ יוֹם־קָרָ֖אתָ וְיִֽהְי֥וּ כָמֹֽנִי׃" />
      <spi-samekh2-before />
    </verse>
    <spi-samekh2 />
    <verse osisID="Lam.1.22">
      <spi-samekh2-after />
      <text text="תָּבֹ֨א כׇל־רָעָתָ֤ם לְפָנֶ֙יךָ֙ וְעוֹלֵ֣ל לָ֔מוֹ כַּאֲשֶׁ֥ר עוֹלַ֛לְתָּ לִ֖י עַ֣ל כׇּל־פְּשָׁעָ֑י כִּֽי־רַבּ֥וֹת אַנְחֹתַ֖י וְלִבִּ֥י דַוָּֽי׃" />
      <spi-pe2-before />
    </verse>
